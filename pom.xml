  <name>Hippo External Resource Project</name>
  <groupId>org.onehippo.forge</groupId>
  <artifactId>externalresource</artifactId>
  <version>1.09.01</version>
  <packaging>pom</packaging>

  <modules>
    <module>common</module>
    <module>addon</module>
    <module>hst</module>
    <module>api</module>
  </modules>


